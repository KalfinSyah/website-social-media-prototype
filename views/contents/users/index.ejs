<div class="container mt-5 mb-5 d-flex justify-content-center">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4" style="max-width: 900px; width: 100%;">
        <% users.forEach(user => { %>
            <div class="col">
                <div class="card shadow-lg rounded-4 h-100 border-0">
                    <div class="card-header bg-primary text-white text-center fw-bold rounded-top-4">
                        <%= user.username %>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted rounded-0">
                            <i class="fas fa-envelope"></i> <%= user.email %>
                        </li>
                    </ul>
                    <div class="card-footer d-flex justify-content-center rounded-bottom-4 border-0">
                        <a href="/users/details/<%= user.id %>" class="btn btn-outline-primary rounded-pill px-4">
                            See User Details
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>
