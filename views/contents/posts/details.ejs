<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 border-0" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white text-center fw-bold fs-4 rounded-top-4">
            <%= post.title %>
        </div>
        <div class="card-body">
            <p class="text-muted fst-italic">
                By <a href="/users/details/<%= post.userId %>" class="text-decoration-none text-success fw-bold">
                    <%= post.username %>
                </a>
            </p>
            <p class="text-dark">
                <%= post.body %>
            </p>
        </div>
    </div>
</div>

<!-- Comments Section -->
<div class="d-flex justify-content-center mt-4 mb-5">
    <div class="card shadow-lg rounded-4 border-0" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-secondary text-white text-center fw-bold rounded-top-4">
            Comments
        </div>
        <div class="card-body">
            <% if (comments.length === 0) { %>
                <p class="text-center text-muted">No comments yet. Be the first to comment!</p>
            <% } else { %>
                <div class="d-flex flex-column gap-3">
                    <% comments.forEach(comment => { %>
                        <div class="card border-0 shadow-sm rounded-4 p-3">
                            <p class="mb-1 fw-bold text-primary"><%= comment.username %></p>
                            <p class="text-muted"><%= comment.body %></p>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>

        <div class="card-footer bg-light rounded-bottom-4 border-0">
            <form action="" method="get">
                <div class="mb-2 mt-3">
                    <textarea class="form-control rounded-3 shadow-sm" name="body" rows="3" placeholder="Write a comment..." required></textarea>
                </div>
                <div class="text-center mt-4 mb-3">
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">Post Comment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center gap-3 mb-5">
    <a href="/posts" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">Back</a>
    <a href="/" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">Home</a>
</div>
